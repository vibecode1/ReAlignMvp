# ReAlign 3.0 Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgres://postgres:password@localhost:5432/realign

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Authentication
JWT_SECRET=your-jwt-secret

# AI Services - Primary
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# ReAlign 3.0 AI Configuration
# Model Selection
AI_DEFAULT_MODEL=gpt-4
AI_FALLBACK_MODEL=gpt-3.5-turbo
CLAUDE_MODEL=claude-3-opus-20240229

# OpenAI Configuration
OPENAI_ORGANIZATION=org-...

# AI Processing Limits
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# Memory System
MEMORY_RETENTION_DAYS=365
MEMORY_COMPRESSION_THRESHOLD=100

# Conversation Settings
CONVERSATION_MAX_HISTORY=50
CONVERSATION_TIMEOUT_MS=1800000

# Document Processing
DOCUMENT_MAX_SIZE=26214400
DOCUMENT_SUPPORTED_TYPES=pdf,docx,txt,png,jpg,jpeg

# Learning System
LEARNING_ENABLED=true
LEARNING_MIN_CONFIDENCE=0.8
LEARNING_OBSERVATION_THRESHOLD=5

# Voice System (Optional)
VOICE_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Feature Flags
FEATURE_EMOTIONAL_INTELLIGENCE=true
FEATURE_PROACTIVE_ASSISTANCE=true
FEATURE_CONTINUOUS_LEARNING=true
FEATURE_VOICE_CALLING=false

# File Uploads
UPLOADS_DIR=./tmp/uploads

# Firebase (for push notifications)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_VAPID_KEY=your-vapid-key